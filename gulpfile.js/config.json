{
  "root": {
    "src": "./src",
    "dest": "./web",
    "docs": "./docs",
    "base": "."
  },

  "tasks": {

    "js": {
      "src": "./js",
      "docs": "./src/js",
      "dest": "./assets/js",
      "entries": {
        "main": "./app.js"
      },
      "doc_entries": {
        "app": "./app.js"
      }
    },

    "css": {
      "docs": "./src/scss/docs.scss",
      "src": "./scss/styles.scss",
      "dest": "./assets/css"
    },

    "sprite": {
      "entry": "./icons/*.svg",
      "fileName": "sprite.svg",
      "spriteDest": "./assets/img",
      "scssDest": "./scss/00_bits/_sprites.scss"
    }

  }
}
